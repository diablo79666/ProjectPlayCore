{
  "service": "profiles",
  "version": "1.0.0",
  "enabled": true,
  "description": "Profiles – Benutzerprofile, Altersprüfung und Metadatenverwaltung.",
  "author": "ProjectPlayCore + ChatGPT",

  "admin": [
    {
      "title": "Profile Verwaltung",
      "href": "/backend/modules/profiles/admin.php",
      "group": "System",
      "cap": "view_admin",
      "order": 15
    }
  ],

  "database": {
    "profiles": {
      "id": "INT(11) NOT NULL AUTO_INCREMENT PRIMARY KEY",
      "user_id": "INT(11) NOT NULL",
      "username": "VARCHAR(100) NOT NULL",
      "display_name": "VARCHAR(150) DEFAULT NULL",
      "email": "VARCHAR(255) DEFAULT NULL",
      "dob": "DATE DEFAULT NULL",
      "age_band": "VARCHAR(10) DEFAULT NULL",
      "avatar_url": "VARCHAR(255) DEFAULT NULL",
      "language": "VARCHAR(10) DEFAULT 'de'",
      "created_at": "TIMESTAMP DEFAULT CURRENT_TIMESTAMP",
      "updated_at": "TIMESTAMP NULL DEFAULT NULL ON UPDATE CURRENT_TIMESTAMP"
    },

    "profile_links": {
      "id": "INT(11) NOT NULL AUTO_INCREMENT PRIMARY KEY",
      "profile_id": "INT(11) NOT NULL",
      "type": "VARCHAR(50) NOT NULL",
      "url": "VARCHAR(255) NOT NULL",
      "visible": "TINYINT(1) DEFAULT 1",
      "created_at": "TIMESTAMP DEFAULT CURRENT_TIMESTAMP",
      "updated_at": "TIMESTAMP NULL DEFAULT NULL ON UPDATE CURRENT_TIMESTAMP"
    }
  },

  "auth_nav": [
    {
      "title": "Mein Profil",
      "href": "/user/profile.php",
      "visible_if": "auth",
      "order": 20
    }
  ]
}
